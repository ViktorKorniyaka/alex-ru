    </context-param>-->

     <context-param>
      <param-name>contextConfigLocation</param-name>
      <param-value>/WEB-INF/db-config.xml</param-value>
    </context-param>

  <!--  <context-param>
        <param-name>contextConfigLocation2</param-name>
        <param-value>/WEB-INF/dispatcher-servlet.xml</param-value>
    </context-param>-->

    <filter>
        <filter-name>hibernateFilter</filter-name>
        <filter-class>org.springframework.orm.hibernate4.support.OpenSessionInViewFilter</filter-class>
        <!--  <init-param>
                  <param-name>sessionFactoryBean</param-name>     &lt;!&ndash; sessionFactoryBeanName&ndash;&gt;
                  <param-value>sessionFactory</param-value>
              </init-param>-->
    </filter>
    <filter-mapping>
        <filter-name>hibernateFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>dispatcher</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
       <!-- <init-param>
            <param-name>contextConfigLocation</param-name>
            <param-value>/WEB-INF/dispatcher-servlet.xml</param-value>
        </init-param>-->
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>dispatcher</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>





    <filter>
        <filter-name>HibFilter</filter-name>
        <filter-class>filter.HibernateSession</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>HibFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
</web-app>
